{
    "compilerOptions": {
        "rootDir": "src",
        "declaration": true,
        "declarationDir": "dist",
        "module": "esnext",
        "target": "es5",
        "lib": ["es6", "dom", "es2016", "es2017"],
        "sourceMap": true,
        "jsx": "react",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "typeRoots": ["./node_modules/@types"],
        "baseUrl": "src"
    },
    "include": ["src", "util"],
    "exclude": ["node_modules", "dist"]
}
